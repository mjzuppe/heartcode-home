---
import Upwork from '../logos/Upwork.astro'
import Shopify from '../logos/Shopify.astro'
import Amazon from '../logos/Amazon.astro'
import Adobe from '../logos/Adobe.astro'
import Snapchat from '../logos/Snapchat.astro'
import Strava from '../logos/Strava.astro'

const logos = [
  {
    name: 'Upwork',
    href: '#',
    logo: Upwork,
  },
  {
    name: 'Shopify',
    href: '#',
    logo: Shopify,
  },
  {
    name: 'Amazon',
    href: '#',
    logo: Amazon,
  },
  {
    name: 'Adobe',
    href: '#',
    logo: Adobe,
  },
  {
    name: 'Snapchat',
    href: '#',
    logo: Snapchat,
  },
  {
    name: 'Strava',
    href: '#',
    logo: Strava,
  },
]
---

<section
  class="mx-auto max-w-screen-xl px-4 pb-10 pt-12 sm:px-6 md:pb-12 md:pt-16 lg:px-8"
>
  {/* Section text */}
  <div class="mx-auto w-full max-w-xl text-center md:max-w-2xl lg:max-w-3xl">
    <p
      class="inline-flex items-center justify-center rounded-r-full rounded-tl-full bg-gradient-to-r from-dark-600 to-dark-700 px-6 py-2 text-sm font-medium tracking-wide text-white"
    >
      Our partners
    </p>
    <h2 class="mt-6 text-3xl font-extrabold text-white sm:text-4xl md:text-5xl">
      Trusted by the best companies in the business
    </h2>
    <p class="mt-6 text-xl text-dark-300">
      Collaborating with various sectors, weâ€™ve helped startups and established
      businesses alike to flourish.
    </p>
  </div>

  {/* Logos */}
  <div class="mx-auto mt-12 max-w-screen-lg lg:mt-14">
    <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:gap-6">
      {
        logos.map((item) => (
          <a href={item.href} class="overflow-hidden" aria-label={item.name}>
            <div class="group flex h-36 w-full items-center justify-center rounded-3xl bg-dark-700 transition duration-200 ease-in-out hover:bg-dark-800">
              <item.logo />
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
